<% layout("layouts/boilorplate.ejs") %>


    <body>




        <div class="row">


            <% for( i=0; i< searchListing.length; i++ ) { %>

              
                    <div class="col-6">
                        <a href="/listing/<%= searchListing[i]._id %>" class="card-listing-link">
                        <div class="card listing-card">
                            <img class="card-img-top" src="<%= searchListing[i].img[0].url %>" alt="listing"
                                style="height:20rem ;">


                            <div class="card-img-overlay">
                                <%= searchListing[i].tittle %>
                            </div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= searchListing[i].tittle %>
                                    </b>
                                    <br>
                                    &#8377; <%= searchListing[i].price.toLocaleString("en-IN") %>/Night<i
                                            class="tax-info">&nbsp; &nbsp;+18%GST </i>

                                </p>
                            </div>
                        </a>
                        </div>
                    </div>
                
                    <% } %>

        </div>

    </body>