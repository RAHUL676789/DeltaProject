<% layout("layouts/boilorplate.ejs") %>
<body>
    <div class="row col-8 offset-2 mb-3">

   
    <form method="post" action="/listing/<%=findlisting._id %>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
        <br>
        <h3> Edit Your Listing</h3>

        <div class="mb-3  mt-3">
            <label for="tittle" class="form-label">Tittle</label>
            <input type="text" name="listing[tittle]" placeholder="enter tittle" class="form-control" id="tittle" value="<%= findlisting.tittle %>" required>
            <div class="valid-feedback">Tittle Looks Good !</div>
                    <div class="invalid-feedback">Tittle should be valid</div>
        </div>
       
        <div class="mb-3  mt-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" placeholder="enter description" class="form-control" id="description" required><%= findlisting.description %></textarea>
            <div class="invalid-feedback">Write Short Description
            </div>
        </div>

        <div class="mb-3  mt-3">
          <h5>this is original image</h5>
          <img src="<%= imageURl %>" alt="preview">
        </div>

        <div class="mb-3  mt-3">
            <label for="img" class="form-label">choose your file</label>
            <input type="file" name="listing[img]" class="form-control" id="img" >
            <div class="invalid-feedback">Image link should be valid</div>
        </div>
      
        <div class="row mb-3  mt-3">
            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" placeholder="enter price" class="form-control" id="price" value="<%= findlisting.price %>" required>
                <div class="valid-feedback">Price Looks Good !</div>
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            <div class="col-md-8">
                <label for="location" class="form-label">location</label>
                <input type="text" name="listing[location]" placeholder="enter location" class="form-control" id="location" value="<%= findlisting.location %>"required>
                <div class="invalid-feedback">location should be valid</div>
            </div>

        </div>

       
        <div class="mb-3 mt-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="enter country" class="form-control" id="country" value="<%= findlisting.country %>"required>
            <div class="invalid-feedback">Country should be valid</div>
        </div>

        <div class="mb-3 mt-3">
                  
              


            <label for="browser">Change your cateogary :</label>
                <input list="browsers" id="browser" name="listing[cateogary]" placeholder="Type to search..." required class="cateogary " value="<%= findlisting.cateogary %>">
                <datalist id="browsers">
                    <option value="Trending">
                    <option value="Iconic City">
                    <option value="Rooms">
                    <option value="Mountain">
                    <option value="Castle">
                    <option value="Amazing Tools">
                    <option value="Camping">
                    <option value="Farms">
                    <option value="Arctic">
                    
                </datalist>

         </div>
       
        <button class="btn btn-dark mt-3">Edit</button>
    </form>
    
</div>

</body>
